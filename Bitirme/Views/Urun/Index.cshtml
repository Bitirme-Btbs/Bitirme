@using Bitirme.Models
@model List<Urun>
@{
    ViewBag.Title = "Index";
}


<table id="mytbl" class="table table-striped">
    <thead>
        <tr>
            <th scope="col">Urun Ad</th>
            <th scope="col">Sil</th>
            <th scope="col">Güncelle</th>

        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <td> @item.UrunAd </td>
                <td>@Html.ActionLink("Sil Butonu", "Remove", new { id = item.UrunId }, new { @class = "btn btn-warning" })</td>
                <td>@Html.ActionLink("Güncelleme Butonu", "Details", new { id = item.UrunId }, new { @class = "btn btn-success" })</td>

            </tr>
        }
    </tbody>
</table>
@Html.ActionLink("Yeni Urun Ekle", "Create", "Urun")
