@using Bitirme.Models
@model BirimMaliyet

    @{
        ViewBag.Title = "Details";
    }

    @using (Html.BeginForm("Edit", "BirimMaliyeti", FormMethod.Post))
    {

        <div>
            @Html.Label("Urun")
            @Html.DropDownListFor(ba => ba.Urun, (List<SelectListItem>)ViewBag.Urunler, new { @class = "form-control" })


        </div>

        <div>
            @Html.Label("Dimmg")
            @Html.TextBoxFor(ba => ba.Dimmg, new { @class = "form-control" })

        </div>
        <div>
            @Html.Label("Dig")
            @Html.TextBoxFor(ba => ba.Dig, new { @class = "form-control" })

        </div>
        <div>
            @Html.Label("Dağitim Ölçüsü")
            @Html.DropDownListFor(ba => ba.BirimDagitimOlcu, (List<SelectListItem>)ViewBag.Dagitim, new { @class = "form-control" })


        </div>
        <div>
            <button class="btn btn-warning"> Güncelle   </button>
        </div>
    }


